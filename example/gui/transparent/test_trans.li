Section Header
  
  + name        := TEST_TRANS;
    
  - bibliography:= "http://IsaacOS.com";
  - author      := "Sonntag Benoit (bsonntag@loria.fr)";
  - comment     := "The first program.";
  
Section Inherit
  
  - parent_object:OBJECT := OBJECT;
  
Section Public  
  
  - main <-
  ( + action_trans:BLOCK;
    
    // Init window.
    VIDEO.make (640,400);
    
    action_trans := { b:G_BUTTON;
      + w:G_WIN_OUT_TRANS_TEST;
      + title:STRING;
      - count:INTEGER;
      
      title := STRING.create 32;
      title.copy "Essai ";
      count := count + 1;
      count.append_in title;
      w := G_WIN_OUT_TRANS_TEST.create title with NULL;
      w.set_position INTERFACE at (20,20) size (200,100);
    };

    // Screen definition.
    INTERFACE.make VIDEO size (VIDEO.width,VIDEO.height) with (             
      (G_BUTTON.create (G_OUT.create "New window") action action_trans.fix_height) /
      G_RAW.create (G_IMG.create "photo.bmp")
    );
                    
    INTERFACE.run;    
  );
