Section Header
  
  + name := PIDIGITS;
  
Section Public

  - main <-
  ( + n:INTEGER;
    
    (COMMAND_LINE.count > 1).if {
      n := COMMAND_LINE.item 1.to_integer;
    } else {
      n := 27;
    };
    CTX.pidigits n;
  );


